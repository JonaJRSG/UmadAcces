<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UmadAcces.Pages.LogInGuestPage"
             Title="Invitado">
    <VerticalStackLayout>
        <StackLayout
        Padding="20"
        Spacing="20"
        >
            <Label 
            Text="LogIn Invitados" 
            HorizontalOptions="Center"
            FontSize="30"
            FontFamily="Montserrat"
            />

            <Entry Placeholder="Usuario"/>

            <Button Text="Obtener acceso" WidthRequest="150" BackgroundColor="{DynamicResource Tertiary}" Clicked="LogInGuest"/>

            <Image Source="umad.png" WidthRequest="300" HeightRequest="300"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>